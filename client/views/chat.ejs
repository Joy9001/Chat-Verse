<!doctype html>
<html lang="en" data-theme="cupcake" class="no-scrollbar">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>ChatVerse</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/3.1.5/purify.min.js"></script>
    </head>

    <body class="no-scrollbar font-operatorMono">
        <%- include('../../public/svgs/icons.svg') %>
        <!-- body -->
        <div
            class="chat-body absolute flex h-full w-full items-center justify-center bg-backImage bg-cover bg-center"
        >
            <!-- chat main -->
            <div
                class="chat-main absolute flex h-4/5 w-3/4 flex-row rounded-xl backdrop-blur-xl"
            >
                <!-- Modal -->
                <div
                    id="transparent-modal"
                    class="fixed left-0 top-0 z-10 hidden h-full w-full"
                ></div>

                <!-- left bar - all chats -->
                <div
                    class="all-chats absolute flex h-full w-[30%] flex-col rounded-l-xl border-r-[1px] border-[#071952]"
                >
                    <!-- heading -->
                    <div
                        class="heading w-[100% - 2rem] m-4 flex h-16 items-center justify-between rounded-lg border-2 border-solid border-[#FADCD5] bg-[#FADCD5] p-2 shadow-md"
                    >
                        <!-- title -->
                        <div
                            class="ml-4 text-xl font-bold max-lg:text-lg max-md:text-base max-sm:text-sm"
                        >
                            <h1>ChatVerse</h1>
                        </div>

                        <!-- add user -->
                        <div id="add-user-btn-parent">
                            <!-- add user btn -->
                            <div
                                class="add-chat-btn mr-2 flex cursor-pointer items-center justify-center rounded-lg active:scale-110 max-md:hidden"
                                id="add-chat-btn"
                            >
                                <img
                                    draggable="false"
                                    src="/svgs/add-user.svg"
                                    alt=""
                                />
                            </div>

                            <!-- add user popup -->
                            <div
                                id="add-chat-popup"
                                class="popup absolute top-19 z-30 flex hidden h-96 w-64 flex-col rounded-lg border-2 border-[#1B0C1A] bg-[#fadfd9] p-4 shadow-lg max-md:hidden"
                            >
                                <h1
                                    class="pl-2 text-xl font-bold text-[#1B0C1A]"
                                >
                                    New Chat
                                </h1>
                                <input
                                    type="search"
                                    name="popup-search"
                                    id="popup-search"
                                    placeholder="Search People"
                                    class="ml-1 mt-3 h-9 w-[13.25rem] rounded-md border-2 border-solid border-[#1B0C1A] pl-2 outline-none"
                                />

                                <!-- all users -->
                                <div
                                    class="popup-people-all no-scrollbar mt-2 flex h-[calc(100%-6rem)] grow flex-col overflow-y-scroll"
                                >
                                    <% peopleToAdd.forEach((element)=> { %>
                                    <div
                                        class="popup-people"
                                        data-id="<%= element._id %>"
                                    >
                                        <% if(element.avatar) { %>
                                        <img
                                            draggable="false"
                                            class="popup-people-avatar"
                                            src="<%=element.avatar %>"
                                            alt="User"
                                        />
                                        <% } else { %>
                                        <img
                                            draggable="false"
                                            class="popup-people-avatar"
                                            src="https://avatar.iran.liara.run/username?username=<%= element.name.replace(' ', '+') %>"
                                            alt="User"
                                        />
                                        <% } %>
                                        <div
                                            class="popup-people-name-parent w-40"
                                        >
                                            <h3
                                                class="popup-people-name overflow-hidden text-ellipsis whitespace-nowrap pl-2 text-base font-semibold text-[#1B0C1A]"
                                            >
                                                <%= element.name %>
                                            </h3>
                                            <h4
                                                class="popup-people-username overflow-hidden text-ellipsis whitespace-nowrap pl-2 text-sm font-medium text-[#1B0C1A]"
                                            >
                                                <%= element.username %>
                                            </h4>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- all messages title -->
                    <div
                        class="ml-6 flex items-center justify-between text-2xl font-bold text-[#FADCD5]"
                    >
                        <h1
                            class="max-lg:text-lg max-md:text-base max-sm:hidden"
                        >
                            All Chats
                        </h1>

                        <!-- change details -->
                        <div
                            class="from-user-img indicator mr-6 flex h-14 w-14 items-center justify-center rounded-full"
                        >
                            <span
                                class="status badge indicator-item badge-success hidden h-2 -translate-x-[50%] translate-y-[50%] p-1"
                            ></span>
                            <!-- Open the modal using ID.showModal() method -->
                            <img
                                draggable="false"
                                id="from-user-modal-img"
                                class="cursor-pointer"
                                src="<%= currentUser.avatar %>"
                                alt="User"
                            />
                            <dialog id="my_modal_2" class="no-scrollbar modal">
                                <div
                                    class="no-scrollbar modal-box bg-[#E9E9E9]"
                                >
                                    <div
                                        class="change-details flex flex-col items-center justify-center space-y-4"
                                    >
                                        <div class="hidden">
                                            <input
                                                type="hidden"
                                                name="CSRFToken"
                                                value="<%= csrfToken %>"
                                            />
                                        </div>
                                        <div class="flex flex-col space-y-2">
                                            <label
                                                for="change-details-name"
                                                class="text-lg font-semibold text-[#4B2138]"
                                                >Name</label
                                            >
                                            <input
                                                type="name"
                                                name="name"
                                                title="name"
                                                placeholder="Enter your name"
                                                id="change-details-name"
                                                autocomplete="name"
                                                class="w-60 rounded-md border-2 border-solid border-[#4B2138] bg-[#E9E9E9] p-2 text-base text-[#4B2138] outline-none"
                                                value="<%= currentUser.name %>"
                                            />
                                        </div>
                                        <div class="flex flex-col space-y-2">
                                            <label
                                                for="change-details-username"
                                                class="text-lg font-semibold text-[#4B2138]"
                                                >Username</label
                                            >
                                            <input
                                                type="username"
                                                name="username"
                                                title="username"
                                                placeholder="Enter your username"
                                                id="change-details-username"
                                                autocomplete="username"
                                                class="w-60 rounded-md border-2 border-solid border-[#4B2138] bg-[#E9E9E9] p-2 text-base text-[#4B2138] outline-none"
                                                value="<%= currentUser.username %>"
                                            />
                                        </div>
                                        <div class="flex flex-col space-y-2">
                                            <label
                                                for="change-details-gender"
                                                class="text-lg font-semibold text-[#4B2138]"
                                                >Gender</label
                                            >
                                            <select
                                                name="gender"
                                                id="change-details-gender"
                                                class="w-60 rounded-md border-2 border-solid border-[#4B2138] bg-[#E9E9E9] p-2 text-base text-[#4B2138] outline-none"
                                            >
                                                <% if
                                                (currentUser.gender==="male" ) {
                                                %>
                                                <option selected>Male</option>
                                                <% } else { %>
                                                <option>Male</option>
                                                <% } %> <% if
                                                (currentUser.gender==="female" )
                                                { %>
                                                <option selected>Female</option>
                                                <% } else { %>
                                                <option>Female</option>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div
                                            class="flex flex-col items-center justify-center space-y-2"
                                        >
                                            <div
                                                for="change-details-profilePic"
                                                class="text-lg font-semibold text-[#4B2138]"
                                            >
                                                Profile Picture
                                            </div>
                                            <div class="avatar">
                                                <div class="w-24 rounded-full">
                                                    <img
                                                        draggable="false"
                                                        id="change-details-profilePic"
                                                        src="<%= currentUser.avatar %>"
                                                    />
                                                </div>
                                            </div>
                                            <button
                                                class="btn w-24 bg-[#4B2138] text-[#E9E9E9] hover:border-1 hover:border-[#4B2138] hover:bg-[#E9E9E9] hover:text-[#4B2138]"
                                                id="change-profilePic-btn"
                                            >
                                                Change
                                            </button>
                                        </div>
                                    </div>
                                    <div
                                        class="modal-action flex justify-between"
                                    >
                                        <a href="/auth/logout"
                                            ><button
                                                id="logout-btn"
                                                class="btn btn-outline text-[#4B2138] hover:bg-[#4B2138] hover:text-[#E9E9E9]"
                                            >
                                                Logout
                                            </button></a
                                        >
                                        <form method="dialog">
                                            <button
                                                id="chat-change-details-done-btn"
                                                class="btn btn-outline text-[#4B2138] hover:bg-[#4B2138] hover:text-[#E9E9E9]"
                                            >
                                                Done
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <form method="dialog" class="modal-backdrop">
                                    <button>close</button>
                                </form>
                            </dialog>
                        </div>
                    </div>

                    <!-- peoples -->
                    <div
                        id="chat-parent"
                        class="chat-parent no-scrollbar my-2 ml-6 mr-2 overflow-y-scroll"
                    >
                        <% if (currentChatPeople) { %> <%
                        currentChatPeople.forEach((element)=> { %>
                        <div
                            class="chat-child group"
                            data-id="<%= element._id %>"
                        >
                            <div class="chats_img indicator">
                                <span
                                    class="status badge indicator-item badge-success hidden h-2 -translate-x-1 translate-y-1 p-[0.4rem]"
                                ></span>
                                <% if (element.avatar) { %>
                                <img
                                    draggable="false"
                                    src="<%= element.avatar %>"
                                    alt="<%= element.name %>"
                                />
                                <% } else { %>
                                <img
                                    draggable="false"
                                    src="https://avatar.iran.liara.run/username?username=<%= element.name.replace(' ', '+') %>"
                                    alt="User"
                                />
                                <% } %>
                            </div>
                            <div class="chat-name-parent">
                                <h4 class="chat-name"><%= element.name %></h4>
                                <h4 class="chat-username">
                                    <%= element.username %>
                                </h4>
                            </div>
                            <% const unreadMsg=unreadMessages.find((msg)=>
                            msg.senderId.toString() === element._id.toString());
                            %> <% if (unreadMsg && unreadMsg.unreadCount !== 0)
                            { %>
                            <div class="unread-badge right-8">
                                <div class="badge bg-[#6D3C52] text-white">
                                    <%= unreadMsg.unreadCount %>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="unread-badge right-8 hidden">
                                <div class="badge bg-[#6D3C52] text-white">
                                    0
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <% }) %> <% } %>
                    </div>

                    <!-- alert -->
                    <div
                        role="alert"
                        id="notification-alert"
                        class="alert absolute bottom-0 mb-2 ml-3 hidden w-11/12 text-[#1B0C1A]"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            class="h-6 w-6 shrink-0 stroke-current"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <span></span>
                    </div>
                </div>

                <!-- right bar - all chats -->
                <div
                    class="all_chats_container absolute right-0 flex h-full w-[70%] flex-col rounded-r-xl"
                >
                    <!-- chats head -->
                    <div
                        id="chats-head"
                        class="chats-head absolute top-0 ml-4 mt-4 flex hidden h-16 w-[calc(100%-2rem)] flex-row items-center justify-between rounded-md border-2 border-solid border-[#FADCD5] bg-[#fadcd5]"
                    >
                        <!-- to user profile -->
                        <div
                            class="to-user-profile ml-4 flex flex-row items-center justify-center space-x-3"
                        >
                            <div
                                class="chats_img indicator flex h-10 w-10 items-center justify-center rounded-full"
                            >
                                <span
                                    class="status badge indicator-item badge-success hidden h-2 -translate-x-1 translate-y-1 p-1"
                                ></span>
                                <img
                                    draggable="false"
                                    id="chat-head-img"
                                    src="/assets/logo.jpeg"
                                    alt="User"
                                />
                            </div>
                            <div class="text-lg font-semibold text-[#1B0C1A]">
                                <h1 id="chat-head-name"></h1>
                            </div>
                        </div>

                        <!-- to user info -->
                        <div class="mr-4">
                            <!-- to user info btn -->
                            <div
                                id="to-user-info-btn"
                                class="to-user-info-btn z-30 h-9 w-9 cursor-pointer hover:scale-110 hover:duration-200 active:scale-110"
                            >
                                <svg
                                    width="35px"
                                    height="35px"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="icon"
                                >
                                    <use xlink:href="#icon-info"></use>
                                </svg>
                            </div>

                            <!-- to user info popup -->
                            <div
                                id="to-user-info-popup"
                                class="popup absolute right-4 top-14 z-30 hidden h-fit w-64 flex-col rounded-lg border-2 border-black bg-[#fadfd9]"
                            >
                                <!-- name & username -->
                                <div
                                    class="to-user-info-popup-details mt-1 flex h-18 cursor-pointer border-b-2 border-black pl-2"
                                >
                                    <img
                                        draggable="false"
                                        src="/assets/logo.jpeg"
                                        alt="User"
                                        class="ml-2 mt-2 h-14 w-14 rounded-full p-1"
                                    />
                                    <div class="ml-2 mt-2 flex w-36 flex-col">
                                        <h3
                                            class="mb-[-4px] overflow-hidden text-ellipsis whitespace-nowrap text-base font-bold"
                                        >
                                            Emma
                                        </h3>
                                        <h4
                                            class="overflow-hidden text-ellipsis whitespace-nowrap text-sm font-medium"
                                        >
                                            @emma123
                                        </h4>
                                    </div>
                                </div>

                                <div
                                    class="to-user-info-popup-options my-3 flex flex-col items-center justify-center space-y-1 *:p-1 *:*:font-semibold"
                                >
                                    <!-- Block -->
                                    <!-- <a href="#" class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:bg-[#FADCD5]"></a> -->
                                    <div
                                        id="block-to-user"
                                        class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:cursor-pointer hover:bg-[#6D3C52] hover:text-[#FADCD5]"
                                    >
                                        <h3>Block</h3>
                                    </div>

                                    <!-- Delete Conversation -->
                                    <div
                                        id="delete-chat-to-user"
                                        class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:cursor-pointer hover:bg-[#6D3C52] hover:text-[#FADCD5]"
                                    >
                                        <h3>Delete Conversation</h3>
                                    </div>

                                    <div class="block-info hidden">
                                        <h3>You have been blocked</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- all chats -->
                    <div
                        id="all-chats"
                        class="absolute top-16 m-4 h-[calc(100%-9.5rem)] w-[calc(100%-2rem)]"
                    >
                        <div
                            id="chat-section"
                            class="chat-section absolute flex hidden h-full w-full flex-col"
                        >
                            <!-- profile info of to-user -->
                            <div
                                class="to-user-profile-sec absolute mt-6 flex h-40 w-full flex-col items-center justify-center py-2"
                            >
                                <!-- to-user-profile-sec-img -->
                                <div
                                    class="to-user-profile-sec-img flex h-20 w-20 items-center justify-center"
                                >
                                    <img
                                        draggable="false"
                                        src="/assets/logo.jpeg"
                                        alt="To User"
                                        class="h-full w-full rounded-full"
                                    />
                                </div>

                                <!-- to-user-profile-sec-name -->
                                <div
                                    class="to-user-profile-sec-name mt-2 flex flex-col items-center justify-center"
                                >
                                    <h1 class="text-lg font-semibold">Emma</h1>
                                    <h3 class="text-base font-medium">
                                        @emma123
                                    </h3>
                                </div>
                            </div>
                            <!-- messages -->
                            <div id="messages" class="messages">
                                <div
                                    class="message-container no-scrollbar flex h-full w-full flex-col justify-evenly overflow-y-scroll pb-1"
                                ></div>
                            </div>
                        </div>
                    </div>

                    <!-- chats end -->
                    <div
                        id="chats-end"
                        class="absolute bottom-0 my-2 ml-4 flex hidden h-16 w-[calc(100%-2rem)] flex-row items-center justify-between rounded-md border-2 border-solid border-[#FADCD5] bg-[#fadcd5] p-2 shadow-2xl *:mx-1"
                    >
                        <!-- emoji -->
                        <div
                            id="emoji-btn"
                            class="cursor-pointer max-sm:hidden"
                        >
                            <div
                                id="emoji-popup-btn"
                                class="emoji-popup-btn flex h-8 w-8 items-center justify-center hover:scale-110 hover:duration-200 active:scale-110"
                            >
                                <img
                                    draggable="false"
                                    src="/assets/smile.png"
                                    alt="Emoji"
                                />
                            </div>

                            <div
                                id="emoji-popup"
                                class="popup absolute bottom-16 left-0 z-50 mb-1 ml-1 hidden h-80 w-[24rem] rounded-lg border-1 border-[#FADCD5] bg-[#fadfd9] p-3 shadow-lg"
                            >
                                <div class="p-2 text-xl font-bold">
                                    <h1>Emoji</h1>
                                </div>

                                <emoji-picker class="light"></emoji-picker>
                            </div>
                        </div>

                        <!-- message input area -->
                        <div class="flex w-[93%] items-center justify-center">
                            <textarea
                                id="msg-input"
                                class="msg-input h-10 w-full resize-none flex-wrap rounded-md p-2 font-operatorMono outline-none"
                                cols="30"
                                rows="10"
                                placeholder="Type a message..."
                                type="text"
                            ></textarea>
                        </div>

                        <!-- send button -->
                        <div id="send-btn">
                            <div
                                class="mr-1 mt-1 flex h-8 w-8 cursor-pointer items-start justify-center rounded-full"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    version="1.1"
                                    xmlns:xlink="http://www.w3.org/1999/xlink"
                                    width="30px"
                                    height="30px"
                                    x="0"
                                    y="0"
                                    viewBox="0 0 512.005 512.005"
                                    style="enable-background: new 0 0 512 512"
                                    xml:space="preserve"
                                    class="icon hover:scale-110 hover:duration-200"
                                >
                                    <use xlink:href="#icon-send"></use>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <div
                        id="chats-end-block"
                        class="absolute bottom-0 flex hidden h-16 w-full flex-row items-center justify-center bg-[#fadcd5] p-2 shadow-2xl *:mx-1"
                    >
                        <div
                            class="block-status flex items-center justify-center font-semibold text-[#1B0C1A]"
                        >
                            <span>You conversation is blocked</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
