{
	"name": "chat-app",
	"version": "1.0.0",
	"exports": "./server/server.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"dev": "nodemon ./server/server.js",
		"start": "node ./server/server.js",
		"build": "npm-run-all --parallel build:base build:chat-css build:webpack",
		"build:chat": "npm-run-all --parallel build:chat-css build:webpack",
		"build:css": "npm-run-all --parallel build:base build:chat",
		"build:base": "tailwindcss -i ./client/styles/base.css -o ./client/styles/base-output.css",
		"build:chat-css": "tailwindcss -i ./client/styles/chat.css -o ./client/styles/chat-output.css",
		"watch:chat-css": "tailwindcss -i ./client/styles/chat.css -o ./client/styles/chat-output.css --watch",
		"watch:base": "tailwindcss -i ./client/styles/base.css -o ./client/styles/base-output.css --watch",
		"build:webpack": "webpack --config webpack.config.js",
		"build:webpack-with-log": "webpack --config webpack.config.js > webpack-errors.log",
		"format:ejs": "prettier --tab-width=4 --plugin=prettier-plugin-ejs --write .",
		"format": "prettier . --write"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@dicebear/collection": "^8.0.2",
		"@dicebear/core": "^8.0.2",
		"bcrypt": "^5.1.1",
		"connect-mongo": "^5.1.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto-js": "^4.2.0",
		"csrf-sync": "^4.0.3",
		"css-loader": "^7.1.2",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.10",
		"emoji-picker-element": "^1.22.8",
		"express": "^4.21.0",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mini-css-extract-plugin": "^2.9.1",
		"mongodb": "^6.7.0",
		"mongoose": "^8.7.0",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-google-one-tap": "^1.0.1",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"socket.io": "^4.8.0",
		"socket.io-client": "^4.8.0",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.25.4",
		"@socket.io/admin-ui": "^0.5.1",
		"autoprefixer": "^10.4.20",
		"babel-loader": "^9.2.1",
		"daisyui": "^4.12.10",
		"ejs-webpack-plugin": "^1.0.0",
		"lodash": "^4.17.21",
		"morgan": "^1.10.0",
		"nodemon": "^3.1.7",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"postcss-preset-env": "^9.6.0",
		"prettier-plugin-ejs": "^1.0.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"tailwindcss": "^3.4.13",
		"terser-webpack-plugin": "^5.3.10",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4"
	}
}
